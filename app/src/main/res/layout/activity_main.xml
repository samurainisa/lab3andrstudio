<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/spSize8"
        android:layout_width="166dp"
        android:layout_height="53dp"
        android:layout_marginStart="19dp"
        android:layout_marginTop="21dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="22dp"
        android:text="Размер - 8SP"
        app:layout_constraintBottom_toTopOf="@+id/whitecolor"
        app:layout_constraintEnd_toStartOf="@+id/spSize24"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/blacktext" />

    <Button
        android:id="@+id/spSize24"
        android:layout_width="164dp"
        android:layout_height="54dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="23dp"
        android:text="Размер - 24SP"
        app:layout_constraintBottom_toTopOf="@+id/whitecolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/spSize8"
        app:layout_constraintTop_toBottomOf="@+id/redtext" />

    <Button
        android:id="@+id/whitecolor"
        android:layout_width="166dp"
        android:layout_height="54dp"
        android:layout_marginStart="18dp"
        android:layout_marginEnd="42dp"
        android:layout_marginBottom="142dp"
        android:text="Белый фон"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/yellowcolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spSize24" />

    <Button
        android:id="@+id/yellowcolor"
        android:layout_width="164dp"
        android:layout_height="56dp"
        android:layout_marginEnd="17dp"
        android:text="Желтый фон"
        app:layout_constraintBottom_toBottomOf="@+id/whitecolor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/whitecolor"
        app:layout_constraintTop_toTopOf="@+id/whitecolor"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/blacktext"
        android:layout_width="169dp"
        android:layout_height="53dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="41dp"
        android:text="Черный текст"
        app:layout_constraintBottom_toBottomOf="@+id/redtext"
        app:layout_constraintEnd_toStartOf="@+id/redtext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/redtext" />

    <Button
        android:id="@+id/redtext"
        android:layout_width="167dp"
        android:layout_height="53dp"
        android:layout_marginEnd="13dp"
        android:layout_marginBottom="23dp"
        android:text="Красный текст"
        app:layout_constraintBottom_toTopOf="@+id/spSize24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/blacktext"
        app:layout_constraintTop_toBottomOf="@+id/edittext" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="404dp"
        android:layout_height="61dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="321dp"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="29dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/redtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

</androidx.constraintlayout.widget.ConstraintLayout>